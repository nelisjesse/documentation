{
  "openapi": "3.0.0",
  "info": {
    "title": "BonResto API",
    "description": "API voor connectie-validatie en debugging.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.bonresto.nl/",
      "description": "Productie server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "Voer je API Key in als Bearer token"
      }
    }
  },
  "paths": {
    "/connect": {
      "get": {
        "summary": "Check API Connection",
        "description": "Valideert de API key en controleert of de server bereikbaar is.",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Geldige API Key",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "message": "Connection valid"
                }
              }
            }
          },
          "401": {
            "description": "Ongeldige API Key",
            "content": {
              "application/json": {
                "example": {
                  "status": "error",
                  "message": "Invalid API Key"
                }
              }
            }
          }
        }
      }
    }
  }
}
